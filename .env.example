# Environment variables for supost
# Copy to .env and fill in values. Never commit .env to git.
# These are the SAME env vars your Next.js frontend will use.
# This is the production environment variables. Do not commit this file to git. Use .supost.yaml for development. These are secret values.

# Supabase / Postgres (leave empty to use in-memory prototype)
DATABASE_URL=postgresql://postgres:your-password@db.your-project-ref.supabase.co:5432/postgres?sslmode=require
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_DIRECT_CONNECTION=postgresql://postgres:[YOUR-PASSWORD]@db.gvskfwoiyrnxrcnmimmd.supabase.co:5432/postgres
SUPABASE_DB_PASSWORD=password-here

# Current Supabase key naming
SUPABASE_PUBLISHABLE_KEY=sb_publishable_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SUPABASE_SECRET_KEY=sb_secret_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# # Legacy aliases (still used by many SDKs/examples)
# SUPABASE_ANON_KEY=sb_publishable_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# SUPABASE_SERVICE_ROLE_KEY=sb_secret_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# App
PORT=8080
VERBOSE=false
FORMAT=json
SUPOST_BASE_URL=https://supost.com

# Mailgun
MAILGUN_API_KEY=api-key-goes-here
MAILGUN_DOMAIN=mg.supost.com
MAILGUN_FROM_EMAIL=response@mg.supost.com
MAILGUN_API_BASE=https://api.mailgun.net
MAILGUN_SEND_TIMEOUT=10s


