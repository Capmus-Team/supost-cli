# Example configuration for supost
# Copy to ~/.supost.yaml or ./supost.yaml

verbose: false
format: json
port: 8080

# Supabase Postgres connection (leave empty to use in-memory)
# Local:    postgresql://postgres:postgres@localhost:54322/postgres
# Supabase: get from Project Settings → Database → Connection string
database_url: ""
supabase_url: ""
supabase_anon_key: ""
supabase_publishable_key: ""
supabase_secret_key: ""

# Publish-link email + URL config
supost_base_url: "https://supost.com"
mailgun_domain: "mg.supost.com"
mailgun_api_key: ""
mailgun_from_email: "response@mg.supost.com"
mailgun_api_base: "https://api.mailgun.net"
mailgun_send_timeout: "10s"
